{
    "name": "php-collective/wp-djot",
    "description": "WordPress plugin for Djot markup language support",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Mark Scherer",
            "homepage": "https://www.dereuromark.de"
        }
    ],
    "require": {
        "php": ">=8.2",
        "php-collective/djot": "dev-master as 0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.4 || ^12.3",
        "php-collective/code-sniffer": "dev-master",
        "phpstan/phpstan": "^2.0"
    },
    "suggest": {
        "ezyang/htmlpurifier": "For additional XSS protection on comments (^4.18)"
    },
    "autoload": {
        "psr-4": {
            "WpDjot\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WpDjot\\Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "cs-check": "phpcs --colors --parallel=16",
        "cs-fix": "phpcbf --colors --parallel=16",
        "stan": "phpstan analyze",
        "test": "phpunit"
    }
}
