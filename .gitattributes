# Auto detect text files and perform LF normalization
* text=auto

# PHP files
*.php text eol=lf

# Templates
*.phtml text eol=lf

# CSS/JS
*.css text eol=lf
*.js text eol=lf

# Markdown
*.md text eol=lf

# Config files
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.neon text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows specific
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Export ignore (exclude from release archives)
/.editorconfig export-ignore
/.gitattributes export-ignore
/.gitignore export-ignore
/.github export-ignore
/phpcs.xml export-ignore
/phpstan.neon export-ignore
/stubs export-ignore
/tests export-ignore
/CHANGELOG.md export-ignore
/scripts
/build.sh
